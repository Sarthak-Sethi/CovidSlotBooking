<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/slotbookingoption1r"
    android:orientation="vertical"
    tools:context=".fragments.Slotbooking">

    <TextView
        android:layout_width="match_parent"
        android:text="CHOOSE YOUR PACKAGE"
        android:textColor="@color/colorPrimaryDark"
        android:fontFamily="@font/arial"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:textSize="25sp"
        android:layout_height="wrap_content">

    </TextView>

  <RadioGroup
      android:layout_width="match_parent"
      android:orientation="horizontal"
      android:layout_marginTop="35sp"
      android:id="@+id/radiopgroup"
      android:gravity="center"
      android:weightSum="3"
      android:layout_margin="20dp"
      android:layout_height="wrap_content">
      <RadioButton
          android:layout_width="0dp"
          android:id="@+id/day5radiobton"
          android:button="@null"
          android:text="5 DAYS "
          android:paddingLeft="20dp"
          android:checked="true"
          android:background="@drawable/radio_btn_selector"
          android:layout_weight="1"
          android:textColor="@android:color/white"
          android:textSize="20sp"
          android:layout_height="50dp">
      </RadioButton>
      <RadioButton
          android:layout_width="0dp"
          android:button="@null"
          android:paddingLeft="20dp"
          android:textSize="20sp"
          android:text="7 DAYS "
          android:id="@+id/day7radiobton"
          android:background="@drawable/radio_btn_selector_7days"
          android:layout_weight="1"
          android:textColor="@android:color/black"
          android:layout_height="50dp">
      </RadioButton>

      <RadioButton
          android:layout_width="0dp"
          android:layout_height="50dp"
         android:button="@null"
          android:paddingLeft="20dp"
          android:id="@+id/day10radiobton"
          android:background="@drawable/rdrio_btn_10day_selector"
          android:layout_weight="1"
          android:textSize="20sp"
          android:text="10 DAYS"
          android:textColor="@android:color/black">

      </RadioButton>
  </RadioGroup>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageview"
        android:layout_width="match_parent"
        android:layout_height="193dp"
        android:src="@drawable/option5"></androidx.appcompat.widget.AppCompatImageView>

    <Button
        android:layout_width="200dp"
        android:id="@+id/slotbookibgbtn"
        android:layout_gravity="center"
        android:background="@drawable/buttons"

        android:layout_marginTop="90dp"
        android:layout_marginBottom="10dp"
        android:padding="6dp"
        android:text="Click here for booking"
        android:layout_height="wrap_content" />

</LinearLayout>